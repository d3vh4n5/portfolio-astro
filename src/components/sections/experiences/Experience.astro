---
import Section from "@/components/Section.astro";
import Paragraph from "@/components/ui/Paragraph.astro";
import Briefcase from "@/components/icons/Briefcase.astro";
import ReactIcon from "@/components/icons/tags/ReactIcon.astro";
import BootstrapIcon from '@/components/icons/tags/Bootstrap.astro'
import PHPIcon from '@/components/icons/tags/PHP.astro'
import SassIcon from '@/components/icons/tags/Sass.astro'
import FireIcon from '@/components/icons/tags/Fire.astro'
import { EXPERIENCES } from "@/data/experience.data";
import { geti18n } from "@/i18n";

const { currentLocale } = Astro

const i18n = geti18n(currentLocale)
const experienceContent = EXPERIENCES[currentLocale]
---

<Section id="experience" title={i18n.menu.experience}>
    <Briefcase class="size-6 md:size-8" slot="icon"/>
        
    <article>
        <div class="sm:flex mt-[80px] gap-10">
            <div class="min-w-[70px] h-[70px] flex items-center justify-center bg-[#00494e] rounded-full">
                <img src="/mini-darkmode1.png" alt="logo" class="w-10">
            </div>
            <div class="texts">
                <h3 class="text-2xl font-medium">{ experienceContent[0].title }</h3>
                <p class="text-gray-400 mb-4">
                    { experienceContent[0].date }
                </p>
                <Paragraph>
                    { experienceContent[0].description }
                </Paragraph>
                <Paragraph>
                    { experienceContent[0].invitation }
                    <a 
                        class="text-blue-600 dark:text-blue-500"
                        href="https://wmnt-portfolio.netlify.app/" 
                        target="_blank"> wmnt Portfolio</a>.
                </Paragraph>
                <div class="flex gap-3">
                    <ReactIcon class="size-8 bg-gray-950"/>
                    <BootstrapIcon class="size-8 text-purple-500"/>
                    <SassIcon class="size-8 text-pink-500"/>
                    <PHPIcon class="size-8 text-blue-600"/>
                    <FireIcon class="size-8 text-orange-600"/>
                </div>
            </div>
        </div>
    </article>

</Section>
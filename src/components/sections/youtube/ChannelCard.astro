---

const { channel } = Astro.props;

---

<div class="p-4 rounded-lg bg-indigo-950/50">
    <header class="flex gap-3 font-bold items-center">
        <img src={channel.logo} alt="Channel Image" class="w-10 h-10 rounded-full">
        <div class="flex justify-between w-full">
            <h3>{channel.name}</h3>
            <div class="w-fit">
                <sup>{channel.mainContent}</sup> <sub>{channel.difficulty}</sub>
            </div>
        </div>
    </header>
    <small class="text-sky-400">{channel.language}</small>
    <h6 class="text-gray-400 font-bold my-3">{channel.content.join(' - ')}</h6>
    <p class="text-gray-500 mb-3">{channel.description}</p>
    <div class="flex justify-between">
        <a class="text-blue-400" href={channel.url}>{channel.channel}</a>
        <a class="text-blue-400" href={channel.page}>Page</a>
    </div>
</div>
---
import { ViewTransitions } from "astro:transitions";
import Header from "@/components/Header.astro";
import Footer from "@/components/sections/footer/Footer.astro";

interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
const { currentLocale } = Astro;
---

<!doctype html>
<html lang={currentLocale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/me.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- SEO -->
		
		<link rel="alternate" href="http://d3vh4n5.com.ar/en"> <!-- pagina alterna (otro idioma) -->
    	<link rel="canonical" href="http://d3vh4n5.com.ar/"> <!-- La principal de la que tiene www y la que no -->

		<!-- OPEN GRAPH  https://www.opengraph.xyz/ -->
		<meta property="og:title" content={title}>
		<meta property="og:description" content={description}>
		<meta property="og:type" content="website">
		<meta property="og:image" content="/me.png">
		<meta property="og:site_name" content="Portfolio Juan Basgall">
		<meta property="og:url" content="http://d3vh4n5.com.ar/">

		<ViewTransitions />
	</head>
	<body class="bg-[#e7e7e7] text-slate-800 dark:bg-[#212433] dark:text-slate-300 text-xs md:text-sm lg:text-base">
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		color-scheme: light dark;
	}
	html {
		font-family: system-ui, sans-serif;
		background-size: 224px;
		scroll-behavior: smooth;
  	}
	
	body {
		color: rgba(17, 17, 17, 0.9);
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		overscroll-behavior: none;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}

	@media (prefers-color-scheme: dark) {
		body {
		 	color: rgba(255, 255, 255, 0.9);
		}
	}
</style>
